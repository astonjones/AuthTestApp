@model IEnumerable<AuthTestApp.Models.Ticket>

<div>
    <h1>Hi!</h1>
    <h2>Need IT Support? Please submit a ticket.</h2>
    <div>
        <a asp-controller="Ticket" asp-action="Create" class="btn btn-primary">
            Create Ticket
        </a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="30%">@obj.Category</td>
                        <td width="50%">@obj.Description</td>
                        <td class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>You have not submitted any tickets.</p>
    }
</div>

