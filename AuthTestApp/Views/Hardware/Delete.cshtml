
@model AuthTestApp.Models.Hardware

<form method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Hardware</h2>
        </div>
        <div class="container">
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Type"></label>
                    <div asp-form="Type">
                        <input asp-for="Type" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Brand"></label>
                    <div>
                        <input asp-for="Brand" disabled class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Model_Number"></label>
                    <div asp-form="Type">
                        <input asp-for="Model_Number" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Location"></label>
                    <div>
                        <input asp-for="Location" disabled class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="SN"></label>
                    <div asp-form="Type">
                        <input asp-for="SN" id="ID" name="ID" disabled class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="In_Use"></label>
                    <div asp-form="Type">
                        <input asp-for="In_Use" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Status"></label>
                    <div>
                        <input asp-for="Status" disabled class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="MAC_Address"></label>
                    <div asp-form="Type">
                        <input disabled asp-for="MAC_Address" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Warranty"></label>
                    <div>
                        <input disabled asp-for="Warranty" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Warranty_Exp_Date"></label>
                    <div>
                        <input disabled asp-for="Warranty_Exp_Date" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Vendor"></label>
                    <div>
                        <input disabled asp-for="Vendor" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="Comments"></label>
                    <div>
                        <textarea disabled asp-for="Comments" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <input type="submit" class="btn btn-danger w-100" value="Delete" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}