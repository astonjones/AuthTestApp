@model AuthTestApp.Models.Hardware

<form method="post" asp-action="Create">
        <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Hardware</h2>
        </div>
        <div class="container">
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Type"></label>
                    <div>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Brand"></label>
                    <div>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Model_Number"></label>
                    <div>
                        <input asp-for="Model_Number" class="form-control" />
                        <span asp-validation-for="Model_Number" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Location"></label>
                    <div>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-10">
                    <label asp-for="SN"></label>
                    <div>
                        <input asp-for="SN" class="form-control" />
                        <span asp-validation-for="SN" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label asp-for="Status"></label>
                    <div>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-6">
                    <label asp-for="In_Use"></label>
                    <div>
                        <input asp-for="In_Use" class="form-control" />
                        <span asp-validation-for="In_Use" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="MAC_Address"></label>
                    <div>
                        <input asp-for="MAC_Address" class="form-control" />
                        <span asp-validation-for="MAC_Address" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Warranty"></label>
                    <div>
                        <input asp-for="Warranty" class="form-control" />
                        <span asp-validation-for="Warranty" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Warranty_Exp_Date"></label>
                    <div>
                        <input asp-for="Warranty_Exp_Date" class="form-control" />
                        <span asp-validation-for="Warranty_Exp_Date" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label asp-for="Vendor"></label>
                    <div>
                        <input asp-for="Vendor" class="form-control" />
                        <span asp-validation-for="Vendor" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="Comments"></label>
                    <div>
                        <textarea asp-for="Comments" class="form-control"></textarea>
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Create" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{  <partial name="_ValidationScriptsPartial" />}
}