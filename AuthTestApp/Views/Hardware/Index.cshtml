@model IEnumerable<AuthTestApp.Models.Hardware>

<div class="Container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Hardware" asp-action="Create" class="btn btn-primary">
                Create New Hardware
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        Brand
                    </th>
                    <th>
                        Model Number
                    </th>
                    <th>
                        Location
                    </th>
                    <th>
                        SN
                    </th>
                    <th>
                        Mac Address
                    </th>
                    <th>
                        In_Use
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Type</td>
                        <td>@obj.Brand</td>
                        <td>@obj.Model_Number</td>
                        <td>@obj.Location</td>
                        <td>@obj.MAC_Address</td>
                        <td>@obj.In_Use</td>
                        <td class="w-75 btn-group" role="group">
                            <a asp-controller="Hardware" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Hardware" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Hardware exists here</p>
    }
</div>
