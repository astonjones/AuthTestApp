
@model AuthTestApp.Models.VicidialApiLog

<div class="border p-3">
    <div class="form-group row">
        <h2 class="text-info pl-3">Record Details</h2>
    </div>
    <div class=" d-flex justify-content-center">
        <ul class="justify-content-around" style="width: 50%">
            <li class="list-group-item d-flex justify-content-between">
                <strong>Api Id</strong>
                <span>@Html.DisplayFor(model => model.ApiId)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>User</strong>
                <span>@Html.DisplayFor(model => model.User)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Api Date</strong>
                <span>@Html.DisplayFor(model => model.ApiDate)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Api Script</strong>
                <span>@Html.DisplayFor(model => model.ApiScript)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Function</strong>
                <span>@Html.DisplayFor(model => model.Function)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Agent User</strong>
                <span>@Html.DisplayFor(model => model.AgentUser)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Value</strong>
                <span>@Html.DisplayFor(model => model.Value)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Result</strong>
                <span>@Html.DisplayFor(model => model.Result)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Result Reason</strong>
                <span>@Html.DisplayFor(model => model.ResultReason)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Source</strong>
                <span>@Html.DisplayFor(model => model.Source)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Data</strong>
                <span>@Html.DisplayFor(model => model.Data)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Run Time</strong>
                <span>@Html.DisplayFor(model => model.RunTime)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Web Server</strong>
                <span>@Html.DisplayFor(model => model.Webserver)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>Api Url</strong>
                <span>@Html.DisplayFor(model => model.ApiUrl)</span>
            </li>
        </ul>
    </div>
    <div class="d-flex justify-content-end">
        <a class="btn btn-success mx-2" asp-controller="VicidialApiLog" asp-action="Index">Back</a>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}